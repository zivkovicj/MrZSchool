<h5 style="color:gray">Question ID #<%= @question.id %></h5>
<h3><strong><%= @riposte.objective.name %></strong>
&emsp; &emsp; Question: <%= @riposte.position %></h3>


<div class="singleOption">
    <div class="row">
        <div class="col-sm-6">
            <%= @question.prompt %>
        </div>
        <div class="col-sm-6">
            <%= image_tag(@question.picture.image_url(:quiz_size).to_s) if @question .picture.present? %>
        </div>
    </div>
</div>
</br>


<%= form_for(@riposte) do |r| %>
    <% if @question.label.grade_type == "teacher" then %>
        <h5 id="teacher_graded_tag">Teacher-Graded Question</h5>
    <% end %>

    <% this_order = [0,1,2,3,4,5].shuffle %>

    <table>
        <div class="container">
            <% if @question.style == "fill_in" %>
                <p>Your Response:</p>
                <%= r.text_field :stud_answer %>
            <% else  %>
                <% 6.times do |n| %>
                    <% x = this_order[n] %>
                    <% answer_text = @question.choices[x] %>
                    <% if !answer_text.blank? %>
                        <tr>
                            <td width="50%">
                                <% if @question.style == "multiple_choice" %>
                                    <%= radio_button_tag "riposte[stud_answer][]", x, false, :id => "choice_bubble_#{x}" %>
                                <% elsif @question.style == "select_many" %>
                                    <%= check_box_tag "riposte[stud_answer][]", x, false, :id => "check_box_#{x}" %>
                                <% end %>
                            </td>
                            <td><%= answer_text %></td>
                        </tr>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </table>


    </br>
    <%= r.submit "Next Question", class: "btn btn-primary" %>
<% end %>
