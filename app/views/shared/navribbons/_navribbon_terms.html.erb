
<div class="ribbon">
    <table class="table-borderless">
        
        <tr>
            <td><h2>Switch to Term</h2></td>
            <td class="spacer"></td>
            <% 4.times do |n| %>
                <td class="<%= 'highlighted' if n==@term %>">
                    <h2>
                        <% if @which_path == "seminar_scoresheet" %> 
                            <%= link_to n+1,
                                scoresheet_seminar_path(:seminar => @seminar, :term => n),
                                :class => "plain_link",
                                :id => "term_#{n}" %>
                        <% end %>
                    </h2>
                </td>
            <% end %>

        </tr>
        
    </table>
</div>
