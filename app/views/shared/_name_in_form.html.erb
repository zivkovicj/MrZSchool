
<% object = form.object %>
<% class_name = object.class.name %>

<% if @assign_permission != "other" %>
    <% this_placeholder = submitted_placeholder ? submitted_placeholder : "Name of this #{class_name}" %>
    <% name_to_show = controller_name == "objectives" ? "Formal Name" : "Name" %>
    <%= form.label name_to_show %>
    <%= form.text_field :name, {class: 'form-control short-field', :id => "name", :placeholder => this_placeholder} %>
<% else %>
    <h2><%= object.name %></h2>
<% end %>
